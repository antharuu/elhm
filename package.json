{
  "name": "elhm",
  "version": "0.1.0",
  "displayName": "Easy LocalHost Manager",
  "description": "Elhm is an application that allows you to easily configure and manage all your local projects.",
  "main": "src/main.js",
  "author": "Anthony Bellancourt",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "eslint . --ext .ts",
    "dev": "cross-env NODE_ENV='development' electron -r babel-register ./src/main"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@types/electron": "^1.6.10",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "babel": "^6.23.0",
    "babel-register": "^6.26.0",
    "electron": "^15.2.0",
    "electron-rebuild": "^3.2.3",
    "electron-watch": "^1.0.9",
    "eslint": "^8.0.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "fs": "^0.0.1-security"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "elhm"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}